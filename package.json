{
  "name": "root",
  "private": true,
  "scripts": {
    "doc": "typedoc packages",
    "lint": "lerna run lint --no-bail",
    "lint:fix": "npm run lint -- -- -- --fix",
    "pretest": "npm run build",
    "test": "ava",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "rebuild": "npm run clean && npm run build",
    "preversion": "npm run lint && npm run test",
    "version": "lerna version --conventional-commits --create-release github",
    "publish": "lerna publish from-git --yes",
    "bootstrap": "lerna bootstrap --hoist",
    "uninstall": "lerna clean --yes && rm -rf ./node_modules",
    "reinstall": "npm run uninstall && npm i",
    "postinstall": "npm run bootstrap",
    "install:prod": "npm ci --ignore-scripts --only=prod --no-optional && npx lerna bootstrap --no-hoist -- --only=prod --no-optional"
  },
  "devDependencies": {
    "@alex-taxiera/eslint-config-ts": "^1.2.0",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@types/node": "^12.19.12",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "ava": "^3.15.0",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-modules-newline": "0.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "lerna": "^3.22.1",
    "ts-node-dev": "1.1.1",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typedoc": "^0.20.14",
    "typescript": "^4.1.3"
  }
}
