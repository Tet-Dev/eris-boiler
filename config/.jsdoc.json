{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["lib", "README.md"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(test-files)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "package": "package.json",
    "template": "../node_modules/clean-jsdoc-theme",
    "destination": "docs",
    "recurse": true
  }
}
