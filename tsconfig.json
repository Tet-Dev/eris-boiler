{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "downlevelIteration": true,
    "lib": [
      "es2020.string",
      "es2019.array"
    ],
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  },
  "include": [
    "**/src"
  ],
  "exclude": [
    "**/node_modules",
    "**/__tests__",
    "**/lib"
  ],
  "plugins": [
    {
      "transform": "@zerollup/ts-transform-paths"
    }
  ]
}
